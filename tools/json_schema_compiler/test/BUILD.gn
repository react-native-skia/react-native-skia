    "simple_api_unittest.cc",
    "test_util.cc",
    "test_util.h",
  ]

  public_deps = [ ":features_compiler_test" ]

  deps = [
    ":generated_api_json_strings",
    ":generated_types",
    "//base",
    "//testing/gmock",
    "//testing/gtest",
  ]
