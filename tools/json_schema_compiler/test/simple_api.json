        "type": "string",
        "enum": ["yes", "no"]
      },
      {
        "id": "TestType",
        "type": "object",
        "properties": {
          "string": {
            "type": "string",
            "description": "Some string."
          },
          "boolean": {
            "type": "boolean",
            "description": "Some boolean."
          },
          "number": {
            "type": "number",
