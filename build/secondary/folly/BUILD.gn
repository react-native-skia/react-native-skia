config("internal_configs") {
  visibility = [ ":*" ]

  cflags_cc = [
    "-Wno-sign-compare",
    "-Wno-unreachable-code",
    "-Wno-unused-local-typedef",
    "-Wno-unreachable-code-return",
    "-Wno-unused-but-set-variable",
  ]

  if (is_clang) {
    cflags_cc += [
      "-Wno-#warnings",
    ]
  } else {
    cflags_cc += [
      "-faligned-new",
      "-Wno-cpp",
      "-Wno-unused-result",
    ]
  }
}

