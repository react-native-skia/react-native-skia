config("fabric_config") {
  include_dirs = [
    "//react-native/ReactCommon",
  ]
}

config("react_native_config") {
  if(is_linux) {
    defines = ["__unused=__attribute__((unused))"]
  }

  cflags_cc = [
    "-std=c++17",
  ]

  if(!is_clang) {
    cflags_cc += [
      "-Wno-unknown-pragmas",
      "-Wno-return-type",
      "-Wno-sequence-point",
      "-Wno-sizeof-pointer-div",
      "-Wno-unused-result",
    ]
  }
}
