declare_args() {
  use_system_libcurl = true
}

if (use_system_libcurl) {
  import("//build/config/linux/pkg_config.gni")
  pkg_config("libcurl_from_pkgconfig") {
    defines = [ "CURL_ENABLED" ]
    visibility = [ "*" ]
    packages = [ "libcurl" ]

  }
} else {
  print("[ ERROR ] Building curl from Source is not supported yet. Please set use_system_curl=true while configuring")
}
