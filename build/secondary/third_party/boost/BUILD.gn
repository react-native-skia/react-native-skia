group("headers_only") {
  public_configs = [ ":boost-config" ]
}

config("boost-config") {
  include_dirs = [
    ".",
  ]

  defines = [
    "BOOST_NO_CXX98_FUNCTION_BASE",
  ]

  cflags_cc = [
    "-Wno-extra-semi",
    "-Wno-deprecated-copy-with-user-provided-copy",
  ]

  if(is_clang) {
    cflags = [ "-fno-complete-member-pointers" ]
  } else {
    cflags_cc += [ "-Wno-parentheses" ]
  }
}
